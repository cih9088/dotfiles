# Update (one or multiple) selected application(s)
# mnemonic [B]rew [U]pdate [P]lugin

if [ ${PLATFORM} != "OSX" ]; then
    echo "${PLATFORM} is not supported" >&2
    return 1
fi

has -v brew fzf

local upd=$(brew leaves | fzf -m)

if [[ $upd ]]; then
    for prog in $(echo $upd);
    do; brew upgrade $prog; done;
fi
