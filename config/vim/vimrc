  set foldlevel=1


" StatusLine
" ---------------------------------------------------------------------------------------

  if has("nvim-0.5")
    lua require("config.statusline")
  else
    function! StatusLineActive()
      let ft  = "%{len(&filetype) ? '['.&filetype.'] ' : ''}"
      let mod = "%{&modified ? '🖋️' : !&modifiable ? '🔒' : ''}"
      let ro  = "%{&readonly ? '👀' : ''}"
      let fug = "%{exists('g:loaded_fugitive') ? fugitive#statusline() : ''}"
      let sep = ' %= '
      let pos = ' %-12(%l : %c%V%) '
      let format = ' %-7([%{&fileformat}]%) '
      let pct = ' %P'
      return '[%n] 🌸 %f '.ft.mod.' '.ro.' %<'.sep.fug.format.pos.'%*'.pct
    endfunction
    function! StatusLineInactive()
      return '[%n] %F'
    endfunction
    augroup statusline
      autocmd!
      autocmd WinEnter,BufEnter * setlocal statusline=%!StatusLineActive()
      autocmd WinLeave,BufLeave * setlocal statusline=%!StatusLineInactive()
    augroup end
  endif



