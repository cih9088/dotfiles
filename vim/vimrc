function! OpenCurrentAsNewTab()
    let l:currentPos = getcurpos()
    tabedit %
    call setpos(".", l:currentPos)
endfunction
nnoremap <C-t> :call OpenCurrentAsNewTab()<CR>
nnoremap <leader>tq :tabclose<CR>

