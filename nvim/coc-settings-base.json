{
    "suggest.maxPreviewWidth": 80,
    "suggest.enablePreview": true,
    "suggest.detailMaxLength": 100,
    "suggest.autoTrigger": "always",
    "suggest.snippetIndicator": "~",
    "suggest.preferCompleteThanJumpPlaceholder": false,
    "suggest.timeout": 2000,
    "suggest.echodocSupport": false,

    "signature.enable": true,
    "signature.target": "float",
    "signature.preferShownAbove": false,
    "signature.hideOnTextChange": false,

    "codeLens.enable": true,

    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.colorSupport": false,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.useQuickfixForLocations": true,

    "coc.source.file.ignoreHidden": false,

    "list.nextKeymap": "<C-n>",
    "list.previousKeymap": "<C-p>",

    "diagnostic.displayByAle": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextPrefix": "  ‣ ",
    "diagnostic.virtualTextLineSeparator": " \\ ",
    "diagnostic.errorSign": "•",
    "diagnostic.warningSign": "•",
    "diagnostic.infoSign": "•",
    "diagnostic.hintSign": "•",

    "snippets.ultisnips.directories": [
        "UltiSnips",
        "snips",
        "gosnippets/UltiSnips"
    ],
    "snippets.loadFromExtensions": false,

    "python.jediEnabled": false,
    "python.trace.server": "off",
    "python.venvFolders": ["envs", ".pyenv", ".direnv", ".virtualenvs"],
    "python.autoUpdateLanguageServer": true,
    "python.venvPath": "",
    "python.pythonPath": "python",

    "yaml.format.enable": true,
    "yaml.schemas": {
        "kubernetes": ["/*"],
        "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": ["/docker-compose.yaml", "/docker-compose.yml"]
    },

    "sh.enable": true,

    "languageserver": {
    }
}
