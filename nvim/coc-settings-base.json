{
    "suggest.maxPreviewWidth": 80,
    "suggest.enablePreview": true,
    "suggest.detailMaxLength": 100,
    "suggest.autoTrigger": "always",
    "suggest.snippetIndicator": "~",
    "suggest.preferCompleteThanJumpPlaceholder": false,
    "suggest.timeout": 2000,
    "suggest.echodocSupport": false,
    "signature.enable": true,
    "signature.target": "float",
    "signature.preferShownAbove": false,
    "signature.hideOnTextChange": false,
    "codeLens.enable": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.colorSupport": false,
    "coc.preferences.enableFloatHighlight": true,
    "coc.source.file.ignoreHidden": false,
    "list.nextKeymap": "<C-n>",
    "list.previousKeymap": "<C-p>",

    "diagnostic.displayByAle": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextPrefix": "  â€£ ",
    "diagnostic.virtualTextLineSeparator": " \\ ",

    "snippets.userSnippetsDirectory": "snips",
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "snips",
        "gosnippets/UltiSnips"
    ],

    "python.jediEnabled": false,
    "python.trace.server": "off",
    "python.venvFolders": ["envs", ".pyenv", ".direnv", ".virtualenvs"],
    "python.venvPath": "",
    "python.autoUpdateLanguageServer": true,
    "python.pythonPath": "python",

    "yaml.schemas": {
        "kubernetes": "/*.yaml"
    },

    "sh.enable": true,

    "languageserver": {
    }
}
