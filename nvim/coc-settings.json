{
    "suggest.maxPreviewWidth": 50,
    "suggest.enablePreview": true,
    "suggest.autoTrigger": "always",
    "suggest.snippetIndicator": "~",
    "suggest.preferCompleteThanJumpPlaceholder": false,
    "suggest.timeout": 2000,
    "suggest.echodocSupport": false,
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.enableFloatHighlight": true,
    "coc.source.file.ignoreHidden": false,
    "list.nextKeymap": "<C-n>",
    "list.previousKeymap": "<C-p>",

    "python.jediEnabled": false,
    "python.trace.server": "off",
    "python.venvFolders": ["envs", ".pyenv", ".direnv", ".virtualenvs"],
    "python.venvPath": "~/.virtualenvs",
    "python.autoUpdateLanguageServer": true,

    "snippets.ultisnips.directories": [
        "UltiSnips",
        "snips"
    ],

    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cacheDirectory": "/tmp/ccls"
            }
        }
    },
    "python.pythonPath": "/Users/andy/.virtualenvs/venv/bin/python"
}
